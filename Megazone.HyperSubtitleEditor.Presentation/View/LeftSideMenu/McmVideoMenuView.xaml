                        <!--구분선-->
                        <Rectangle Grid.Row="0" Fill="#dfe3ee" Height="1" VerticalAlignment="Top" />

                        <!--페이징-->
                        <Grid Grid.Row="2" Margin="{StaticResource LayoutLeftMargin}" Visibility="Collapsed">
                            <TextBlock
                                Text="{Binding Path=TotalCount, StringFormat='{x:Static resources:Resource.CNT_TOTAL_COUNT}'}"
                                HorizontalAlignment="Left" VerticalAlignment="Center" />
                        </Grid>

                        <!--비디오 검색 결과 목록-->
                        <Grid Grid.Row="4">
                            <ListBox x:Name="VideoListBox" ItemsSource="{Binding Path=VideoItems}"
                                     SelectedItem="{Binding Path=SelectedVideoItem}"
                                     ItemContainerStyle="{StaticResource Style_VideoListBoxItem}"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Standard">
                                <i:Interaction.Behaviors>
                                    <behavior:ListBoxDataLoadBehavior
                                        Command="{Binding Path=AddDataCommand}" />
                                </i:Interaction.Behaviors>
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="itemVm:VideoItemViewModel">
                                        <Border Height="{StaticResource VideoListBoxItemHeight}" 
                                                Width="{StaticResource VideoListBoxItemWidth}"
                                                ToolTip="{Binding Path=Name}">
                                            <Grid >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="68" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!--대표이미지-->
                                                <Grid Grid.Column="1" VerticalAlignment="Center" Width="68" Height="68">
                                                    <Image Source="{StaticResource Bitmap_NoFoundImage}" />
                                                    <Image
                                                        Source="{Binding Path=PrimaryImageUrl,TargetNullValue={x:Null}}" />
                                                </Grid>

                                                <!--비디오 정보-->
                                                <Grid Grid.Column="3" Margin="0, 15">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>

                                                    <Image Style="{StaticResource Style_VideoBadgeImage}"
                                                           HorizontalAlignment="Left" />

                                                    <Grid Grid.Row="1" 
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding Path=Name}"
                                                                   FontSize="11"
                                                                   FontWeight="Bold"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Grid.Column="1"
                                                                   FontSize="11"
                                                                   Text="{Binding Path=Id, StringFormat='{}({0})'}"
                                                                   Margin="3,0" />
                                                    </Grid>
                                                    <Grid Grid.Row="2" VerticalAlignment="Center">
                                                        <TextBlock
                                                            Text="{Binding Path=Duration, StringFormat={}{0:hh':'mm':'ss}}"
                                                            FontSize="11"
                                                            TextAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Left" />
                                                    </Grid>
                                                </Grid>

                                                <!--캡션 이동 버튼-->
                                                <Grid Grid.Column="5" VerticalAlignment="Center">
                                                    <Image
                                                        Source="pack://application:,,,/Megazone.HyperSubtitleEditor.Presentation.Resource;component/Image/img_btn_arrow_right.png"
                                                        Width="12" Height="12" />
                                                </Grid>


                                                <Button Grid.Column="0"
                                                        Grid.ColumnSpan="6"
                                                        BorderThickness="0"
                                                        Style="{StaticResource Style_IconMenuButton}"
                                                        Command="{Binding Path=DataContext.LoadCaptionCommand, ElementName=Root}"
                                                        CommandParameter="{Binding}" 
                                                        Opacity="0.01"
                                                        VerticalAlignment="Stretch" 
                                                        HorizontalAlignment="Stretch">
                                                    <!--<Button.Triggers>
                                                        <EventTrigger RoutedEvent="Button.Click">
                                                            <BeginStoryboard Name="CaptionBoardOpenStoryboard">
                                                                <Storyboard>
                                                                    <DoubleAnimation
                                                                        Storyboard.Target="{Binding ElementName=CaptionBorder}"
                                                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                                        Duration="0:0:0.3" From="0" To="350"
                                                                        SpeedRatio="1"
                                                                        FillBehavior="HoldEnd" />
                                                                    <DoubleAnimation
                                                                        Storyboard.Target="{Binding ElementName=CaptionBorder}"
                                                                        Storyboard.TargetProperty="Opacity"
                                                                        BeginTime="0:0:0"
                                                                        Duration="0:0:0.3" From="0" To="1"
                                                                        FillBehavior="HoldEnd" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Button.Triggers>-->
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!--구분선-->
                            <Rectangle Grid.Row="0" Fill="#dfe3ee" Height="1" VerticalAlignment="Top" />

                            <Grid
                                Visibility="{Binding ElementName=VideoListBox, Path=HasItems, Converter={StaticResource BooleanToCollapsedNVisibleConverter}}">
                                <TextBlock
                                    Text="{Binding Source={x:Static resources:Resource.CNT_LEFT_SIDE_MENU_VIDEO}, StringFormat='{x:Static resources:Resource.MSG_EMPTY_LIST}'}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding Path=IsBusy, Converter={StaticResource BooleanToCollapsedNVisibleConverter}}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Control Grid.Row="0" Grid.RowSpan="2" x:Name="LoadingProgressView"
                 Visibility="{Binding Path=IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                 Style="{StaticResource Style_IndeterminateControl}" />
    </Grid>
</UserControl>