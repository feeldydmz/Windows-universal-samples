<UserControl x:Class="Megazone.HyperSubtitleEditor.Presentation.View.ProjectSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mz="http://schemas.megazone.co.kr"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:view="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.View"
             xmlns:itemVm="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.ViewModel.ItemViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="900"
             DataContext="{Binding Source={StaticResource SubtitleViewModelLocator}, Path=SignIn}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="{x:Type ListBoxItem}" x:Key="Style_ListBoxItemFreeSize" BasedOn="{StaticResource Style_ListBoxItemDefault}">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style TargetType="{x:Type CheckBox}" x:Key="Style_CheckBox" BasedOn="{StaticResource Style_CheckBoxDefault}">
            
            <Setter Property="FlowDirection" Value="RightToLeft"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#282f37">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0">
            <Label Foreground="White" HorizontalContentAlignment="Center">
                프로젝트를 선택해 주세요
            </Label>
            <Label Foreground="White" HorizontalContentAlignment="Center">
                Please select Project of the Stage you want to access
            </Label>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Foreground="White" HorizontalContentAlignment="Center">
                    Stage Total
                </Label>
                <Label Foreground="LightSkyBlue" Content="{Binding StageTotal}" Margin="5,0,0,0"></Label>
            </StackPanel>
            <Button Grid.Row="1" 
                    Grid.Column="0" 
                    Background="Transparent" 
                    Content="&lt;" 
                    VerticalAlignment="Stretch" 
                    Visibility="{Binding Path=IsLeftNavigateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding LeftSlideNavigateCommand}"
                    />
            <Button Grid.Row="1" 
                    Grid.Column="2" 
                    Background="Transparent" 
                    Content="&gt;" 
                    VerticalAlignment="Stretch" 
                    Visibility="{Binding Path=IsRightNavigateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding RightSlideNavigateCommand}"
                    />
            <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Visibility="{Binding IsNotExistContentVisible, Converter={StaticResource BooleanToVisibilityConverter}}" >스테이지 없음</Label>
            <ItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Path=CurrentPageStageItems}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" MinHeight="300" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type itemVm:StageItemViewModel}">
                        <Grid Margin="0,0,20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Foreground="White" Text="{Binding Path=Name}"/>
                            <Border Grid.Row="1" Margin="2" BorderThickness="2" BorderBrush="Black">
                                <ListBox ItemsSource="{Binding Path=ProjectItems}" SelectionMode="Single" 
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible"
                                         ItemContainerStyle="{StaticResource Style_ListBoxItemFreeSize}"
                                         SelectedItem="{Binding Source={StaticResource SubtitleViewModelLocator}, Path=SignIn.SelectedProject}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type itemVm:ProjectItemViewModel}">
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Path=DisplayTitle}"/>
                                                <Image x:Name="PART_Check" Grid.Column="1" Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" Stretch="None"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Source="pack://application:,,,/Megazone.HyperSubtitleEditor.Presentation.Resource;component/Image/img_CheckInCheckBox.png" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" HorizontalAlignment="Center" Content="취소"
                    Visibility="{Binding IsCancleButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Grid.Column="2" HorizontalAlignment="Center" Content="시작하기"
                    Command="{Binding Path=StartProjectCommand}"/>
        </Grid>
    </Grid>
</UserControl>
