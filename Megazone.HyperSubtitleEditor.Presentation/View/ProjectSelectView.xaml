<UserControl x:Class="Megazone.HyperSubtitleEditor.Presentation.View.ProjectSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mz="http://schemas.megazone.co.kr"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:view="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.View"
             xmlns:itemVm="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.ViewModel.ItemViewModel"
             xmlns:resources="clr-namespace:Megazone.SubtitleEditor.Resources;assembly=Megazone.SubtitleEditor.Resources"
             xmlns:converter="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.Converter"
             xmlns:behavior="clr-namespace:Megazone.HyperSubtitleEditor.Presentation.Behavior"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1280"
             DataContext="{Binding Source={StaticResource SubtitleViewModelLocator}, Path=SignIn}">
    <i:Interaction.Behaviors>
        <behavior:ProjectSelectBehavior Command="{Binding StageNumberChangedCommand}"/>
    </i:Interaction.Behaviors>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <mz:DesignTimeResourceDictionary
                    ProjectName="Megazone.HyperSubtitleEditor.Presentation"
                    Source="/Megazone.HyperSubtitleEditor.Presentation;component/DesignTimeResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converter:StageIconTitleConverter x:Key="StageIconTitleConverter"/>

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Malgun Gothic" />
            </Style>

            <Style TargetType="{x:Type ListBox}" x:Key="Style_ListBox_ProjectSelect" BasedOn="{StaticResource Style_ListBoxDefault}">
                <Setter Property="Background" Value="#282f37"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="#282f37"/>

            </Style>

            <Style TargetType="{x:Type ListBoxItem}" x:Key="Style_ListBoxItemFreeSize" BasedOn="{StaticResource Style_ListBoxItemDefault}">
                <Setter Property="Height" Value="38"/>
                <Setter Property="Width" Value="338"/>
                <Setter Property="Foreground" Value="#989CA7"/>

                <Setter Property="Background" Value="#2E353F"/>
                <!--<Setter Property="BorderThickness" Value="0,0,0,1"/>-->
                <Setter Property="BorderBrush" Value="#3C434D"/>
            </Style>
            <Style TargetType="{x:Type CheckBox}" x:Key="Style_CheckBox" BasedOn="{StaticResource Style_CheckBoxDefault}">
                <Setter Property="FlowDirection" Value="RightToLeft"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}" x:Key="Style_TextBlockNavi">
                <!--<Setter Property="Margin" Value="4"/>-->
                <Setter Property="Background" Value="#282f37"/>
                <Setter Property="Foreground" Value="#5B626A"/>
                <Setter Property="Height" Value="26"/>
                <Setter Property="FontSize" Value="19"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#282f37">
        <Grid.RowDefinitions>
            <RowDefinition Height="130" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,45,0,0">
            <Label Foreground="White" HorizontalContentAlignment="Center" FontSize="24">
                프로젝트를 선택해 주세요
            </Label>
            <Label Foreground="#a0a3aa" HorizontalContentAlignment="Center" FontSize="12">
                Please select Project of the Stage you want to access
            </Label>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="88"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="88"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Foreground="White" HorizontalContentAlignment="Center" FontWeight="Bold">
                    Stage Total
                </Label>
                <Label Foreground="#5fa5f0" Content="{Binding StageTotal}" Margin="5,0,0,0" FontWeight="Bold"></Label>
            </StackPanel>
            <Button Grid.Row="1" 
                    Grid.Column="0" 
                    Background="{DynamicResource Brush_Button_Background_Base_Color}"
                    Style="{StaticResource Style_PagePrevButton}"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding Path=IsLeftNavigateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding LeftSlideNavigateCommand}"
                    />
            <Button Grid.Row="1" 
                    Grid.Column="2" 
                    Background="{DynamicResource Brush_Button_Background_Base_Color}" 
                    Style="{StaticResource Style_PageNextButton}"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Visibility="{Binding Path=IsRightNavigateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding RightSlideNavigateCommand}"
                    />
            <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Visibility="{Binding IsNotExistContentVisible, Converter={StaticResource BooleanToVisibilityConverter}}" >스테이지 없음</Label>
            
            <ItemsControl x:Name="StageItemControl"
                          Grid.Row="1" 
                          Grid.Column="1" 
                          ItemsSource="{Binding Path=CurrentPageStageItems}" 
                          VerticalAlignment="Top" HorizontalAlignment="Stretch" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" MaxHeight="300" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type itemVm:StageItemViewModel}">
                        <Grid Margin="17,0,17,0" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="54" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label BorderThickness="1" BorderBrush="#3C434D">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="54"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Ellipse Fill="#40485B" Height="40" Width="40" />
                                        <TextBlock Text ="S" 
                                                   Margin="1,0,0,1"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Foreground="#848B9B"
                                                   FontSize="22"/>
                                    </Grid>
                                    <TextBlock Grid.Column="1" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Stretch"
                                               Margin="5"
                                               FontSize="16"
                                               Foreground="#F9FEFF" 
                                               Text="{Binding Path=Name}"/>
                                </Grid>
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelectedStage}" Value ="True">
                                                <Setter Property="BorderBrush" Value="#60A5F0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                    <!--<Trigger Property="{Binding IsSelectedStage}" Value="True">
                                        <Setter Property="BorderBrush" Value="#60A5F0"/>
                                    </Trigger>-->
                                </Label.Style>
                            </Label>
                            <Border Grid.Row="1" Margin="0,4,0,0" BorderThickness="1,1,1,0" BorderBrush="#3C434D">
                                <ListBox ItemsSource="{Binding Path=ProjectItems}" SelectionMode="Single" 
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         Style="{StaticResource Style_ListBox_ProjectSelect}"
                                         ItemContainerStyle="{StaticResource Style_ListBoxItemFreeSize}"
                                         SelectedItem="{Binding Source={StaticResource SubtitleViewModelLocator}, Path=SignIn.SelectedProject}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type itemVm:ProjectItemViewModel}">
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Path=DisplayTitle}"/>
                                                <Image x:Name="PART_Check" Grid.Column="1" Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}" Stretch="None"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Source="pack://application:,,,/Megazone.HyperSubtitleEditor.Presentation.Resource;component/Image/img_CheckInCheckBox.png" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Control Grid.Row="1" Grid.Column="1" x:Name="LoadingProgressView" 
                     Visibility="{Binding Path=IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Style="{StaticResource Style_IndeterminateControl}" />
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" HorizontalAlignment="Center" 
                    Style="{StaticResource Style_Button_Left_Navi}"
                    Content="{x:Static resources:Resource.CNT_PROJECT_BACK}"
                    Visibility="{Binding IsCancleButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Command="{Binding Path=CancelProjectSelectCommand}"/>

            <!--<Button Grid.Column="2" HorizontalAlignment="Center" Style="{StaticResource Style_ButtonNavi}"
                    Content="{x:Static resources:Resource.CNT_PROJECT_START}"
                    Command="{Binding Path=StartProjectCommand}"
                    />-->

            <Button Grid.Column="3" HorizontalAlignment="Center" 
                    Style="{StaticResource Style_Button_Right_Navi}"
                    Command="{Binding Path=StartProjectCommand}"
                    Visibility="{Binding IsStartButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Content="{x:Static resources:Resource.CNT_PROJECT_START}"/>
        </Grid>
    </Grid>
</UserControl>
